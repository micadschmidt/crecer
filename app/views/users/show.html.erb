<div class="banner">
  <div class="container">
    <h1>Crecer</h1>
    <h2>Mi Perfil</h2>
    <div class="container main py-4">
      <div class="row g-4">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card mb-5">
            <div class="card-body border-0 rounded bg-light shadow-lg text-center">
              <%= cl_image_tag @user.foto.key, class:"avatar-square-shadow-xlg", crop: :thumb %>
              <h5 class="my-3"><%= @user.nombre %></h5>
              <div class="d-flex flex-column align-items-center justify-content-center">
              <%= link_to "Editar perfil", edit_user_path, type: "button", class:" btn btn-outline-dark btn-soft profile-btn btn-sm mx-0 mt-2", style:"width: 70%;"%>
              <%#= link_to "Cancel", assitant_path(@assistant), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
              <%# <%= link_to "Add a review for this assistant", new_assistant_review_path(@assistant.id), type: "button", class:"btn btn-soft profile-btn btn-sm mx-0 mt-2", style:"width: 70%;"%>      
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-8">
        <div class="card mb-5">
          <div class="card-body border-0 rounded bg-light shadow-lg">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nombre Completo</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.nombre %> <%= @user.apellido %></p>
              </div>
            </div>
          <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.email %></p>
              </div>
            </div>
          <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Teléfono</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.telefono %></p>
              </div>
            </div>
          <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nombre del alumno/a</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.alumnonombrecompleto %> <%= @user.alumnonombrecompleto1 %></p>
              </div>
            </div>
          <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Dirección</p>
              </div>
              <div class="col-sm-9 mb-1">
                <p class="text-muted mb-0"><%= @user.direccion %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
